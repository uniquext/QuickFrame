<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.uniquext.quickframe.repository.dao.UserDao">

    <resultMap type="com.uniquext.quickframe.repository.entity.User" id="UserMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="account" column="account" jdbcType="VARCHAR"/>
        <result property="password" column="password" jdbcType="VARCHAR"/>
        <result property="nickname" column="nickname" jdbcType="VARCHAR"/>
        <result property="gender" column="gender" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="UserMap">
        select id,
               account,
               password,
               nickname,
               gender
        from User
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="UserMap">
        select
        id, account, password, nickname, gender
        from User
        <where>
            <if test="user != null">
                <if test="user.id != null">
                    and id = #{user.id}
                </if>
                <if test="user.account != null and user.account != ''">
                    and account = #{user.account}
                </if>
                <if test="user.password != null and user.password != ''">
                    and password = #{user.password}
                </if>
                <if test="user.nickname != null and user.nickname != ''">
                    and nickname = #{user.nickname}
                </if>
                <if test="user.gender != null">
                    and gender = #{user.gender}
                </if>
            </if>
        </where>
        <if test="pageable != null">
            <if test="pageable.sort != null and pageable.sort.sorted">
                ORDER BY
                <foreach collection="pageable.sort" item="order" separator=",">
                    ${order.property} ${order.direction}
                </foreach>
            </if>
            limit #{pageable.offset}, #{pageable.pageSize}
        </if>
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from User
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="account != null and account != ''">
                and account = #{account}
            </if>
            <if test="password != null and password != ''">
                and password = #{password}
            </if>
            <if test="nickname != null and nickname != ''">
                and nickname = #{nickname}
            </if>
            <if test="gender != null">
                and gender = #{gender}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into User(account, password, nickname, gender)
        values (#{account}, #{password}, #{nickname}, #{gender})
    </insert>

    <insert id="insertBatch" keyProperty="id" useGeneratedKeys="true">
        insert into User(account, password, nickname, gender)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.account}, #{entity.password}, #{entity.nickname}, #{entity.gender})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="id" useGeneratedKeys="true">
        insert into User(account, password, nickname, gender)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.account}, #{entity.password}, #{entity.nickname}, #{entity.gender})
        </foreach>
        on duplicate key update
        account = values(account),
        password = values(password),
        nickname = values(nickname),
        gender = values(gender)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update User
        <set>
            <if test="account != null and account != ''">
                account = #{account},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="nickname != null and nickname != ''">
                nickname = #{nickname},
            </if>
            <if test="gender != null">
                gender = #{gender},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete
        from User
        where id = #{id}
    </delete>

</mapper>

